<% if @race.present? %>
  <% if @race.errors.any? %>
    <% @race.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new race
</h1>


<hr>

<form action="/create_race" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @race.name %>">
  </div>

  <div class="form-group">
    <label for="event_id">
      Event
    </label>

    <%= select_tag(:event_id, options_from_collection_for_select(Event.all, :id, :name, @race.event_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="year">
      Year
    </label>

    <input type="text" id="year" name="year" class="form-control" value="<%= @race.year %>">
  </div>

  <div class="form-group">
    <label for="location">
      Location
    </label>

    <input type="text" id="location" name="location" class="form-control" value="<%= @race.location %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create race
  </button>
</form>

<hr>

<a href="/races">
  Go back
</a>
